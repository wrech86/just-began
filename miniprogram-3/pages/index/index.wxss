/**index.wxss**/
.box{
  width: 100%;
  height: 250px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-image: linear-gradient(120deg, #a1c4fd 0%, #c2e9fb 100%);
}
.circle{
  box-sizing: border-box;
  width: 150px;
  height: 150px;
  border-radius: 50%;
  border:rgba(75, 73, 73, 0.829) 1px solid;
  font-size: 55px;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-bottom: 20px;
}
.box1{
  margin: 50px auto;
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.row{
  width: 95%;
  height: 45px;
  background-color: rgb(255, 255, 255);
  border-radius: 10px;
  box-shadow: 0 0 10px 0px rgba(82, 80, 80, 0.35);
  margin-bottom: 20px;
  display: flex;
}
.one{
  width: 30%;
  height: 45px;
  line-height: 45px;
  text-align: center;
  font-size: 14px;
}
.two{
  width: 70%;
  height: 45px;
  line-height: 45px;
  text-align: center;
}