.loginBox{
  width: 100vw;
  height: 400rpx;
  position: relative;
  animation: color-change 40s linear infinite alternate both;
  box-shadow: inset 0 6rpx 20rpx -6rpx rgba(19, 18, 18, 0.5);
  margin: 0 auto;
}
@keyframes color-change {
  0% {
    background: #f55555a2;
  }
  10% {
    background: #5EFCE8;
  }
  20% {
    background: #9808cc8f;
  }
  30% {
    background: #4ac628a1;
  }
  40% {
    background: #FFCF71;
  }
  50%{
    background:#69ff97;
  }
  60%{
    background:#FAB2FF;
  }
  70%{
    background:#FFF720;
  }
  80%{
    background:#EEAD92;
  }
  90%{
    background:#FFCCCC;
  }
  100%{
    background: #CCFF66;
  }
}
