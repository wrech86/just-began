/* utils/floor-mopping-robot/floor-mopping-robot.wxss */
page{
  background-color: rgb(245, 241, 241);
}
.bigbtn{
  width: 400rpx;
  height: 400rpx;
  margin: 200rpx auto;
  border-radius: 50%;
  border: 20rpx solid rgba(216, 215, 215, 0.329);
  box-shadow: 2rpx 2rpx 12rpx 2rpx rgba(51, 50, 50, 0.822);
  background-color: rgba(255, 255, 255, 0.884);
  display: flex;
}
.img{
  width: 200rpx;
  height: 200rpx;
  margin: auto;
}
.vessel{
  width: 660rpx;
  height: 300rpx;
  margin:200rpx auto;
}
.Set{
  width: 660rpx;
  height: 100rpx;
  background-color: rgba(255, 255, 255, 0.884);
  margin-top: 16rpx;
  border-radius: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx rgba(211, 207, 207, 0.473);
  display: flex;
  position: relative;
}
.littleImg{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
  margin-left: 25rpx;
}
.text{
  line-height: 100rpx;
  margin-left: 10rpx;
  color: #707070;
  font-size: 28rpx;
}
.number{
  line-height: 100rpx;
  position: absolute;
  right: 30rpx;
  color: #707070;
  font-size: 28rpx;
}
.setTime{
  width: 600rpx;
  height: 300rpx;
  position: absolute;
  top: 300rpx;
  left: 75rpx;
  box-shadow:1rpx 1rpx 1rpx 1rpx rgba(211, 207, 207, 0.473) ;
  background-color: rgb(255, 255, 255);
}
.setTimeChild{
  width: 600rpx;
  height: 80rpx;
  margin-top: 45rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.setTimeChild>button{
  position: relative;
  height: 80rpx;
  box-shadow:1rpx 1rpx 1rpx 1rpx rgba(211, 207, 207, 0.473) ;
}
.setTimeChild view{
  position: absolute;
  top: 25rpx;
  left: 25rpx;
  right: 0;
  bottom: 0;
  font-size: 25rpx;
  width: 60rpx;
  height: 25rpx;
  color: #707070;
}
.btnclass{
  position:absolute;
  top: 1400rpx;
  left: 0;
  right: 0;
}
.btnclass>button{
  color: #707070;
}
